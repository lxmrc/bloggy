<li class="list-group-item p-2">
  <% if comment.user.profile_picture.attached? %>
    <%= image_tag comment.user.profile_picture.variant(combine_options: {resize: '20x20^', extent: '20x20', gravity: 'Center'}).processed, class: 'img-thumbnail'%>
  <% else %>
    <%= image_tag 'https://via.placeholder.com/20', class: 'img-thumbnail' %>
  <% end %>
  <%= link_to "#{comment.user.username}", comment.user, class: 'link-dark' %> wrote: <%= comment.content %>
</li>
