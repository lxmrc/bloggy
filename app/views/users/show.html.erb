<div class="row mb-4">
  <div class="col-6 mx-auto">
      <div class="card" style="max-width: 540px;">
        <div class="row no-gutters">
          <div class="col-md-4">
            <% if @user.profile_picture.attached? %>
                <%= image_tag @user.profile_picture.variant(resize: "250x250>"), class: 'card-img' %>
            <% end %>
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h3 class="card-title"><%= @user.username %></h3>
              <p class="card-text"><%= @user.description %></p>
              <% if current_user == @user %>
                <%= link_to 'New post', new_post_path, class: 'btn btn-primary btn-sm' %>
                <%= link_to 'Edit profile', edit_user_registration_path(@user), class: 'btn btn-primary btn-sm'%>
              <% end %>
            </div>
          </div>
        </div>
      </div>
  </div>
</div>

<div class="row">
  <div class="col-6 mx-auto">
    <%= render @posts %>
  </div>
</div>
