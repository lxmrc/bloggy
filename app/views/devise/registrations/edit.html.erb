<div class="row my-4">
  <div class="col-md-6  mx-auto">
    <header>
      <h2>Edit account</h2>
    </header>
    <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), method: :put) do |f| %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      <%= f.text_field :username %>
      <%= f.file_field :profile_picture %>
      <%= f.password_field :password %>
      <%= f.password_field :password_confirmation %>
      <%= f.password_field :current_password, label: "Current password (if changing password)"%>
      <%= f.primary "Update account" %>
    <% end %>
  </div>
</div>

<div class="row my-4">
  <div class="col-md-6 mx-auto">
    <div class="card border border-danger">
      <div class="card-body">
        <h3>Delete account</h3>
        <p>This will permanently delete your account. Are you sure? </p>
        <%= button_to "Delete account", 
          registration_path(resource_name), 
          data: { confirm: "Are you sure you want to delete your account?" }, 
          method: :delete,
          class: 'btn btn-danger' %>
      </div>
    </div>
  </div>
</div>

<%= link_to "Back", :back %>
