<div class="row mb-4">
  <div class="col-8 mx-auto">
    <% @posts.each do |post| %>
      <div class="row">
        <div class="col-2">
          <%= render 'users/icon', user: post.user %>
        </div>
        <div class="col-9">
          <%= render post, user: post.user %>
        </div>
      </div>
    <% end %>
  </div>
</div>
